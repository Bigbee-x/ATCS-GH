<!--
  ATCS-GH | Road Edge Definitions
  ════════════════════════════════
  Defines 8 directed edges (4 in, 4 out) for the 4-way intersection.

  Accra-realistic design:
  ┌─────────────────────────────────────────────────────────────┐
  │ North-South corridor  │ 2 lanes │ 50 km/h (13.89 m/s)      │
  │   — main arterial (Ring Road / Liberation Road style)       │
  │                                                             │
  │ East-West corridor    │ 1 lane  │ 40 km/h (11.11 m/s)      │
  │   — secondary/side street                                   │
  └─────────────────────────────────────────────────────────────┘

  Priority 2 = major road, Priority 1 = minor road.
  Each direction is a SEPARATE directed edge (SUMO convention).
-->
<edges>
    <!-- ── North-South corridor (main road, 2 lanes each way) ── -->
    <edge id="N2J" from="N"  to="J0" numLanes="2" speed="13.89" priority="2"/>
    <edge id="J2N" from="J0" to="N"  numLanes="2" speed="13.89" priority="2"/>
    <edge id="S2J" from="S"  to="J0" numLanes="2" speed="13.89" priority="2"/>
    <edge id="J2S" from="J0" to="S"  numLanes="2" speed="13.89" priority="2"/>

    <!-- ── East-West corridor (side street, 1 lane each way) ─── -->
    <edge id="E2J" from="E"  to="J0" numLanes="1" speed="11.11" priority="1"/>
    <edge id="J2E" from="J0" to="E"  numLanes="1" speed="11.11" priority="1"/>
    <edge id="W2J" from="W"  to="J0" numLanes="1" speed="11.11" priority="1"/>
    <edge id="J2W" from="J0" to="W"  numLanes="1" speed="11.11" priority="1"/>
</edges>
